% plot delH vs. delV for the Earth-like experiments

%------------------------size of figure------------------------------------
figureHeight = 3.5; % unit inches
width2height= 2.1;
figure1 = figure('unit','inches','position',[0 0 figureHeight*width2height figureHeight]);

fontname = 'Helvetica';
set(0,'defaultaxesfontname',fontname);
fontsize1 = 12;
fontsize2 = 11;

ha = tight_subplot(1,2,0.03,[0.18 0.1],[0.1 0.02]) ;

% ======================== plot all case with same gamma = 1 ==============
axes(ha(1));

refX  = 5:10:100;
refY  = refX;
plot(refX,refY,'--k','linewidth',2)
hold on

h1 = plot(delH_earthLike(4,:),delV_earthLike(4,:),'--bo',...
    'linewidth',1,'markeredgecolor','b','MarkerFaceColor','b',...
    'markersize',4);
hold on
h2 = plot(delH_2omega(4,:),delV_2omega(4,:),'--rs',...
    'linewidth',1,'markeredgecolor','r','MarkerFaceColor','r',...
    'markersize',4);
h3 = plot(delH_2radius(4,:),delV_2radius(4,:),'--m^',...
    'linewidth',1,'markeredgecolor','m','MarkerFaceColor','m',...
    'markersize',4);
h4 = plot(delH_4omega(4,:),delV_4omega(4,:),'--gd',...
    'linewidth',1,'markeredgecolor','g','MarkerFaceColor','g',...
    'markersize',4);
h5 = plot(delH_4radius(4,:),delV_4radius(4,:),'--k*',...
    'linewidth',1,'markeredgecolor','k','MarkerFaceColor','k',...
    'markersize',4);
set(gca,'fontsize',fontsize1,'linewidth',1)
set(gca,'XScale','log','YScale','log')
axis square
box on
xlim([5 100])
ylim([5 100])
xlabel({'\Delta_h (K)'},'FontSize',fontsize1,'FontWeight','bold');
ylabel({'\Delta_v (K)'},'FontSize',fontsize1,'FontWeight','bold');

legend1 = legend([h1 h2 h3 h4 h5],'Earth-like','2\Omega_e','2a_e','4\Omega_e','4a_e');
set(legend1,'fontsize',fontsize2,'box','off','location','northwest')

%
% ======================== plot Earth-like case with different gamma ======
axes(ha(2));

colorScheme = 'bo';
colorMarker = 'b';

refX  = 5:10:100;
refY  = refX;
plot(refX,refY,'--k','linewidth',2)
hold on

for expNum = 1:4
    plot(delH_earthLike(:,expNum),delV_earthLike(:,expNum),['--' colorScheme],...
    'linewidth',1,'markeredgecolor',colorMarker,'MarkerFaceColor',colorMarker,...
    'markersize',4);

end
plot(delH_earthLike(4,:),delV_earthLike(4,:),'-k','linewidth',2)
axis square
box on

%xlabel({'-$(f/\beta){\partial}_y \overline {\theta}$'},...
%    'Interpreter','latex',...
%    'FontSize',16);
xlabel({'\Delta_h (K)'},'FontSize',fontsize1,'FontWeight','bold');

set(gca,'fontsize',fontsize1,'linewidth',1)
set(gca,'XScale','log','YScale','log')
xlim([5 100])
ylim([5 100])




